# LinkedIn AI Influencer - Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# TWITTER/X AUTHENTICATION (for scraping AI news from bookmarks)
# =============================================================================
# Option 1: Direct Twitter login
TWITTER_USERNAME=
TWITTER_PASSWORD=

# Option 2: Google OAuth (recommended - more stable)
GOOGLE_EMAIL=your_email@gmail.com

# =============================================================================
# LINKEDIN AUTHENTICATION (for posting)
# =============================================================================
# Option 1: Direct LinkedIn login
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Option 2: Google OAuth (if your LinkedIn uses Google)
# GOOGLE_EMAIL=your_email@gmail.com  # Same as above if using Google for both

# =============================================================================
# AI API KEYS
# =============================================================================
# Anthropic API Key (required for Claude CLI if not using 'claude auth')
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API Key (optional - for AI-generated images)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================
# Enable debug logging
DEBUG=false

# Hugging Face offline mode (set to 1 to use cached models only)
HF_HUB_OFFLINE=0
